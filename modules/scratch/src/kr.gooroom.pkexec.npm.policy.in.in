<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE policyconfig PUBLIC
"-//freedesktop//DTD PolicyKit Policy Configuration 1.0//EN"
"http://www.freedesktop.org/standards/PolicyKit/1/policyconfig.dtd">
<policyconfig>

  <vendor>The Gooroom Project</vendor>
  <action id="kr.gooroom.pkexec.npm">
    <_description>Run Gooroom Toolkit as root</_description>
    <_message>Authentication is required to run npm</_message>
    <defaults>
      <allow_any>no</allow_any>
      <allow_inactive>yes</allow_inactive>
      <allow_active>yes</allow_active>
    </defaults>
    <annotate key="org.freedesktop.policykit.exec.path">/usr/bin/npm</annotate>
  </action>

</policyconfig>
